<div id="main">
	<section class="post">
		<header class="major">
			<span class="date"><%= @post.created_at.to_formatted_s(:long) %></span>
			<h1><%= @post.title %></h1>
		</header>
		<div class="image main"><img src="<%= @post.image_url %>" alt="" /></div>
		<p><%= @post.content %></p>
      <a class="btn btn-sm" href="/posts/<%= @post.id %>" data-method="delete">
         <i class="pg-trash"></i><span>Delete</span>
      </a>
	</section>
</div>
