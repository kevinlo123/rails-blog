<div id="main">
   <section class="post">
      <%= form_for @post , url: {action: "create"}, html: {class: "nifty_form"} do %>
         <div class="field">
	    <label for="post[title]">Title</label>
	    <input type="text" name="post[title]"/>
	 </div>
	 <div class="field">
	    <label for="post[feature]">Feature Blog?</label>
	     <select name="post[feature]">
	        <option value="1">Active</option>
	        <option value="0">De-active</option>
	     </select>
	 </div>
	 <div class="field">
	    <label for="post[image_url]">Img Url</label>
	    <input type="text" name="post[image_url]"/>
	 </div>
	 <div class="field">
	    <label for="post[slug]">Slug</label>
	    <input type="text" name="post[slug]"/>
	 </div>
	 <div class="field">
	    <label for="post[content]">Content</label>
	    <textarea type="text" name="post[content]"></textarea>
	 </div>
	 <div class="field">
	    <button type="submit">save</button>
	 </div>
      <% end %>
   </section>
</div>
